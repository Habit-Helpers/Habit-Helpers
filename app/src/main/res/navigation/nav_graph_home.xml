<?xml version="1.0" encoding="utf-8"?>
<!-- nav_graph_home.xml -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_home"
    app:startDestination="@id/homeFragment">

    <!-- HomeFragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.habit_helper.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <!-- Define your ActivityFragment -->
    <fragment
        android:id="@+id/activityFragment"
        android:name="com.example.habit_helper.ActivityFragment"
        android:label="Activities"
        tools:layout="@layout/fragment_activity" />

    <!-- Action to navigate from HomeFragment to ActivityFragment -->
    <action
        android:id="@+id/action_homeFragment_to_activityFragment"
        app:destination="@id/activityFragment" />



</navigation>
